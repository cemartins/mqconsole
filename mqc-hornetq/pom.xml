<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>net.sf.juffrou</groupId>
		<artifactId>mq-console</artifactId>
		<version>2.0.1</version>
	</parent>
	<artifactId>mqc-hornetq</artifactId>
	<name>MQConsole for HornetQ</name>
	<description>HornetQ Client</description>

	<dependencies>
		<dependency>
			<groupId>net.sf.juffrou</groupId>
			<artifactId>mqc-core</artifactId>
			<version>2.0.1</version>
		</dependency>

		<dependency>
			<groupId>org.springframework</groupId>
			<artifactId>spring-jms</artifactId>
			<version>${spring.version}</version>
		</dependency>

		<dependency>
			<groupId>org.hornetq</groupId>
			<artifactId>hornetq-core-client</artifactId>
			<version>2.4.1.Final</version>
		</dependency>
		<dependency>
			<groupId>org.hornetq</groupId>
			<artifactId>hornetq-jms-client</artifactId>
			<version>2.4.1.Final</version>
		</dependency>
		<dependency>
			<groupId>org.hornetq</groupId>
			<artifactId>hornetq-tools</artifactId>
			<version>2.4.1.Final</version>
		</dependency>
	</dependencies>
	
	<build>
		<finalName>MQConsole_hornetq</finalName>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>exec-maven-plugin</artifactId>
				<configuration>
					<mainClass>${exec.mainClass}</mainClass>
					<arguments>
						<argument>set_maven_path_to_broker_properties</argument>
					</arguments>
				</configuration>
			</plugin>

			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<executions>
					<execution>
						<id>copy-jars</id>
						<phase>package</phase>
						<goals>
							<goal>single</goal>
						</goals>
						<configuration>
							<finalName>bin</finalName>
							<descriptors>
								<descriptor>src/main/assembly/copyjars.xml</descriptor>
							</descriptors>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>JavaFx-Packaging</id>
						<phase>package</phase> 
						<goals> <goal>run</goal> </goals>
						<configuration>
							<target xmlns:fx="javafx:com.sun.javafx.tools.ant">
								<taskdef uri="javafx:com.sun.javafx.tools.ant" resource="com/sun/javafx/tools/ant/antlib.xml" classpath="${basedir}/src/main/deploy:${javafx.tools.ant.jar}" />

								<fx:application id="fxApp" name="${project.build.finalName}" mainClass="${exec.mainClass}" version="${project.version}" />
								
								<fx:preferences menu="false"/>

								<fx:jar destfile="${project.build.directory}/${project.build.finalName}"> 
									<fx:application refid="fxApp" /> 
									<fx:fileset dir="${project.build.directory}/bin-jars/classes" /> 
									<fx:resources> 
										<fx:fileset dir="${project.build.directory}" includes="bin-jars/*.jar" />
									</fx:resources>
										<manifest> 
											<attribute name="Implementation-Vendor" value="Juffrou" /> 
											<attribute name="Implementation-Version" value="${project.version}" />
											<attribute name="Main-Class" value="${exec.mainClass}" /> 
									</manifest> 
								</fx:jar>

								<!-- use a profile in maven settings.xml to define the following properties -->
								<fx:signjar alias="${certificate.alias}" keypass="${certificate.pass}" keystore="${keystore.dir}/${keystore.file}" storepass="${keystore.pass}" storetype="${keystore.type}" destdir="${project.build.directory}">
								</fx:signjar>

								<fx:deploy outdir="${project.build.directory}" outfile="${project.build.finalName}" nativeBundles="all" verbose="true">
									<fx:application refid="fxApp" />
									<fx:resources>
										<!-- If you changed <fx:jar> above, don't forget to modify the 
											line below -->
										<fx:fileset dir="${project.build.directory}" includes="${project.build.finalName}.jar" /> 
										<fx:fileset dir="${project.build.directory}" includes="bin-jars/*.jar" />
										<fx:fileset dir="${basedir}/src/main/deploy/package" includes="*.properties" />
									</fx:resources>
									<!-- 
									<fx:bundleArgument arg="mac.signing-key-user-name" value="Carlos Martins"/>
									 -->
									<!-- <fx:platform> -->
									<fx:platform basedir=""> <!-- Leave out the JRE -->
										<fx:jvmarg value="-Xmx768m" />
									</fx:platform>
								</fx:deploy>

							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>

	<profiles>
		<profile>
			<id>MacOSX_specific_package</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-deploy-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy_dmg_bundle</id>
								<phase>deploy</phase>
								<goals>
									<goal>deploy-file</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<artifactId>${project.artifactId}</artifactId>
							<groupId>${project.groupId}</groupId>
							<version>${project.version}</version>
							<file>${project.build.directory}/bundles/${project.build.finalName}-${project.version}.dmg</file>
							<generatePom>false</generatePom>
							<url>https://api.bintray.com/maven/${bintray.user}/${bintray.repo}/${bintray.package}/${project.version}/${project.build.finalName}-${project.version}.dmg</url>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>Windows_specific_package</id>
			<activation>
				<os>
					<family>windows</family>
				</os>
			</activation>
			<build>
				<plugins>
					<plugin>
						<artifactId>maven-antrun-plugin</artifactId>
						<executions>
							<execution>
								<id>Windows_ZIP_package</id>
								<phase>deploy</phase> 
								<goals> <goal>run</goal> </goals>
								<configuration>
									<target>
										<zip destfile="${project.build.directory}/bundles/${project.build.finalName}.zip" basedir="${project.build.directory}/bundles/${project.build.finalName}" />
									</target>
								</configuration>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<artifactId>maven-deploy-plugin</artifactId>
						<executions>
							<execution>
								<id>deploy_zip_bundle</id>
								<phase>deploy</phase>
								<goals>
									<goal>deploy-file</goal>
								</goals>
							</execution>
						</executions>
						<configuration>
							<artifactId>${project.artifactId}</artifactId>
							<groupId>${project.groupId}</groupId>
							<version>${project.version}</version>
							<file>${project.build.directory}/bundles/${project.build.finalName}.zip</file>
							<generatePom>false</generatePom>
							<url>https://api.bintray.com/maven/${bintray.user}/${bintray.repo}/${bintray.package}/${project.version}/${project.build.finalName}-${project.version}.zip</url>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	
</project>